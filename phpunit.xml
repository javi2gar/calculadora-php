<?xml version="1.0" encoding="UTF-8"?>
    <phpunit colors="true">
        <testsuites>
            <testsuite name="Directorio de tests">
                <directory>./tests/</directory>
            </testsuite>
        </testsuites>
        <logging>
            <log type="coverage-html" target="reports/phhpunit/reports" lowUpperBound="35"
                highLowerBound="70"/>
            <log type="coverage-clover" target="reports/phhpunit/coverage.xml"/>
            <log type="junit" target="reports/phhpunit/logfile.xml"/>
            <log type="testdox-html" target="reports/phhpunit/testdox.html"/>
            <log type="testdox-text" target="reports/phhpunit/testdox.txt"/>
        </logging>
    </phpunit>